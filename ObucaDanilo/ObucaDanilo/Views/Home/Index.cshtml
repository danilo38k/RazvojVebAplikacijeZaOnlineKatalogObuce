@model IEnumerable<ObucaDanilo.Models.Category>
@{
    ViewData["Title"] = "Početna";
}

<div class="text-center mt-4 mb-5">
    <h1 class="fw-bold">Dobrodošli u Katalog Obuće</h1>
    <p class="lead text-muted mt-3">
        Krenite u potragu za savršenim parom!<br />
        U našoj ponudi ćete pronaći sve — od elegantnih cipela,
        preko udobnih patika, do letnjih sandala i toplih čizama.
        Izaberite kategoriju i otkrijte obuću koja priča vašu priču.
    </p>
</div>

<h2 class="mb-4 text-center">Pregledaj po kategorijama</h2>

<div class="list-group">
    @foreach (var category in Model)
    {
        <a asp-controller="Product"
           asp-action="Category"
           asp-route-id="@category.Id"
           class="list-group-item list-group-item-action mb-2 shadow-sm">
            <div class="fw-bold">@category.Name</div>
            <div class="small text-muted">@category.Description</div>
        </a>
    }
</div>