@model IEnumerable<ObucaDanilo.Models.ViewModels.OrderViewModel>
@{
    ViewData["Title"] = "Moje porudžbine";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Nemate nijednu porudžbinu. <a asp-controller="Home" asp-action="Index">Nastavite kupovinu</a>.
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Broj porudžbine</th>
                    <th>Datum</th>
                    <th>Status</th>
                    <th>Ukupno</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToString("g")</td>
                        <td>@order.Status</td>
                        <td>@order.TotalAmount.ToString("N0") RSD</td>
                        <td>
                            <a asp-action="OrderConfirmation"
                               asp-route-id="@order.Id"
                               class="btn btn-sm btn-primary">
                                Detalji
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>