@{
    ViewData["Title"] = "Checkout";
}

<div class="container">
    <h1>Checkout</h1>

    <div class="row">
        <div class="col-md-6 mb-4">
            <h3>Sažetak narudžbine</h3>
            <p>Ukupan iznos: <strong>@ViewBag.CartTotal.ToString("N0") RSD</strong></p>
        </div>

        <div class="col-md-6">
            <h3>Podaci za isporuku</h3>

            <form asp-action="Checkout" method="post">
                <div class="form-group mb-3">
                    <label for="shippingAddress">Adresa za isporuku:</label>
                    <textarea id="shippingAddress" name="shippingAddress"
                              class="form-control" required></textarea>
                </div>

                <button type="submit" class="btn btn-success">Potvrdi porudžbinu</button>
            </form>
        </div>
    </div>

    <!--  Nazad dugme -->
    <div class="mt-4">
        <button type="button" class="btn btn-secondary" onclick="history.back()">
            <i class="fas fa-arrow-left"></i> Nazad
        </button>
    </div>
</div>