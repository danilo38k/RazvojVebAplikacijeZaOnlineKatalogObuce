@model ObucaDanilo.Models.ViewModels.ProductViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Title" />
        </div>

        <div class="col-md-6">
            <h1>@Model.Title</h1>
            <p class="text-muted">@string.Join(", ", Model.CategoryNames)</p>
            <h3 class="text-primary">@Model.Price.ToString("N0") RSD</h3>
            <p>@Model.Description</p>

            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mb-3">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <div class="form-group">
                        <label for="quantity">Količina:</label>
                        <input type="number" id="quantity" name="quantity" value="1" min="1"
                               class="form-control" style="width: 100px;" />
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Dodaj u korpu</button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login"
                   class="btn btn-primary mb-3">Prijavite se za kupovinu</a>
            }

            <!--  Nazad dugme – vrati na prethodnu stranu -->
            <div class="mt-3">
                <button type="button" class="btn btn-secondary" onclick="history.back()">
                    <i class="fas fa-arrow-left"></i> Nazad
                </button>
            </div>
        </div>
    </div>
</div>