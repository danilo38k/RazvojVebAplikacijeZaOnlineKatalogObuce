@model IEnumerable<ObucaDanilo.Models.ViewModels.ProductViewModel>

@foreach (var product in Model)
{
    <div class="card flex-row align-items-center p-2">
        <img src="@product.ImageUrl" class="img-thumbnail me-3" style="width:100px; height:100px; object-fit:cover;" alt="@product.Title" />
        <div class="flex-grow-1">
            <h5 class="mb-1">@product.Title</h5>
            <div class="mb-1 text-primary">@product.Price.ToString("N0") RSD</div>
            <div class="mb-2 text-muted small">@string.Join(", ", product.CategoryNames)</div>
            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">Detalji</a>
        </div>
    </div>
}