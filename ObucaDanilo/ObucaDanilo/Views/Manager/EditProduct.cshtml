@model ObucaDanilo.Models.Product
@{
    ViewData["Title"] = "Edit Product";
    Layout = "_ManagerLayout";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Manager" asp-action="EditProduct" method="post" enctype="multipart/form-data" class="row g-3">
    @Html.AntiForgeryToken()
    @await Html.PartialAsync("_Alerts")

    <input asp-for="Id" type="hidden" />

    <div class="col-md-6">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label">Trenutna slika</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" style="height:80px;" class="mb-2" />
        }
    </div>
    <div class="col-md-8">
        <label class="form-label">Postavi novu sliku</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Kategorije</label>
        <select name="selectedCategories" class="form-select" multiple size="5">
            @foreach (var cat in ViewBag.Categories as IEnumerable<ObucaDanilo.Models.Category>)
            {
                <option value="@cat.Id" selected="@( (ViewBag.SelectedCategories as List<string>).Contains(cat.Id) )">
                    @cat.Name
                </option>
            }
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Update
        </button>
        <a asp-controller="Manager" asp-action="Products" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>