@model IEnumerable<ObucaDanilo.Models.Product>
@{
    ViewData["Title"] = "Upravljaj proizvodima";
    Layout = "_ManagerLayout";
}

<h1>@ViewData["Title"]</h1>

<!-- Remove "Dodaj novi proizvod" button -->

<table class="table">
    <thead>
        <tr>
            <th>Slika</th>
            <th>Naziv</th>
            <th>Cena</th>
            <th>Kategorije</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" width="50" height="50" />
                </td>
                <td>@item.Title</td>
                <td>@item.Price.ToString("N0") RSD</td>
                <td>@string.Join(", ", item.ProductCategories.Select(pc => pc.Category.Name))</td>
                <td>
                    <a asp-controller="Manager" asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-sm btn-info">Izmeni</a>
                    <form asp-controller="Manager" asp-action="DeleteProduct" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Da li ste sigurni da želite da obrišete ovaj proizvod?')">Obriši</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Nazad button to Manager Panel -->
<div class="mt-3">
    <a asp-controller="Manager" asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Nazad
    </a>
</div>