@model IEnumerable<ObucaDanilo.Models.User>
@{
    ViewData["Title"] = "Korisnici";
    Layout = "_AdminLayout";
}

<h1>Korisnici</h1>

<p>
    <a asp-action="AddUser" class="btn btn-primary">
        <i class="fas fa-plus"></i> Dodaj novog korisnika
    </a>
</p>

<table class="table align-middle table-hover">
    <thead class="table-light">
        <tr>
            <th>Ime i prezime</th>
            <th>Email</th>
            <th>Uloga</th>
            <th class="text-end">Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Email</td>
                <td>
                    @{
                        var roles = new List<string>();
                        if (item.IsAdmin) roles.Add("Admin");
                        // handles IsManager if exists
                        if ((item.GetType().GetProperty("IsManager")?.GetValue(item) as bool?) == true)
                            roles.Add("Manager");

                        var rolesText = roles.Any() ? string.Join(", ", roles) : "Korisnik";
                    }
                    @rolesText
                </td>
                <td class="text-end">
                    <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form asp-action="DeleteUser" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Da li ste sigurni da želite da obrišete ovog korisnika?')">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Nazad
    </a>
</div>