@model ObucaDanilo.Models.User
@{
    ViewData["Title"] = "Edit User";
    Layout = "_AdminLayout";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="EditUser" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    @await Html.PartialAsync("_Alerts")

    <input asp-for="Id" type="hidden" />

    <div class="col-md-6">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" />
        <small class="text-muted">Ostavite prazno ako ne menjate lozinku.</small>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="col-12 form-check">
        <input asp-for="IsAdmin" class="form-check-input" />
        <label asp-for="IsAdmin" class="form-check-label">Administrator</label>
    </div>

    <div class="col-12 form-check">
        <input asp-for="IsManager" class="form-check-input" />
        <label asp-for="IsManager" class="form-check-label">Manager</label>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Update
        </button>
        <a asp-action="Users" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>

        // da UI ne blokira submit kada je password polje prazno.
        (function(){
            var pwd = document.querySelector('input[name="Password"]');
            if (pwd) {
                pwd.removeAttribute('data-val');
                pwd.removeAttribute('data-val-required');
            }
        })();
    </script>
}