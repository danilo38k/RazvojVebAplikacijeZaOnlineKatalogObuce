@model IEnumerable<ObucaDanilo.Models.Category>
@{
    ViewData["Title"] = "Kategorije";
    Layout = "_AdminLayout";
}

<h1>Kategorije</h1>

<p>
    <a asp-action="AddCategory" class="btn btn-primary">
        <i class="fas fa-plus"></i> Dodaj novu kategoriju
    </a>
</p>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Naziv</th>
            <th>Opis</th>
            <th class="text-end">Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(c => c.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td class="text-end">
                    <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form asp-action="DeleteCategory" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Da li ste sigurni da želite da obrišete kategoriju @item.Name?')">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Nazad
    </a>
</div>