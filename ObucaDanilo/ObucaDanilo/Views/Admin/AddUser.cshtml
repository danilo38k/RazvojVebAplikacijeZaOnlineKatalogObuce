@model ObucaDanilo.Models.User
@{
    ViewData["Title"] = "Dodaj korisnika";
    Layout = "_AdminLayout";
}

<h1>Dodaj korisnika</h1>

<form asp-action="AddUser" method="post">
    @Html.AntiForgeryToken()
    @await Html.PartialAsync("_Alerts")

    <div class="form-group">
        <label asp-for="FirstName">Ime</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName">Prezime</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Lozinka</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsAdmin" class="form-check-input" />
        <label asp-for="IsAdmin" class="form-check-label">Administrator</label>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsManager" class="form-check-input" />
        <label asp-for="IsManager" class="form-check-label">Manager</label>
    </div>

    <button type="submit" class="btn btn-primary">Sačuvaj</button>
    <a asp-action="Users" class="btn btn-secondary">Otkaži</a>
</form>